// Create a function that takes two numbers as arguments and return their sum.

function addition(a, b) {
sum = a + b;
	return sum
}
addition(3,2)


// Write a function that takes an integer minutes and converts it to seconds.

function convert(minutes) {
	var conversion = 60 * minutes;
	return conversion
}

// Create a function that takes the number of wins, draws and losses and calculates the number of points a football team has obtained so far. A win receives 3 points, a draw 1 point and a loss 0 points.

function footballPoints(wins, draws, losses) {
	var w = 3 * wins;
	var d = 1 * draws;
	var l = 0 * losses;
	sum = w +d+l
	return sum
}
footballPoints(1,1,1)

// Create a function that takes height and width and finds the perimeter of a rectangle.


function findPerimeter(height, width) {
var h = 2 * height
var w = 2 * width
area = h + w
	return area
}
findPerimeter(2,3)

// Create a function that takes a number as its only argument and returns true if it's less than or equal to zero, otherwise return false.

function lessThanOrEqualToZero(num) {
	if (num <= 0) {
		return true
	}	else {
		return false
	}
}
lessThanOrEqualToZero(1)

// Create a function that takes a number as an argument, increments the number by +1 and returns the result.

function addition(num) {
	var final = num + 1;
	return  final
}
addition(2)

// Fix the code in the code tab to pass this challenge (only syntax errors). Look at the examples below to get an idea of what the function should do.

function squared(b) {
	return b * b;
}

// Create a function that takes a string and returns it as an integer.

function stringInt(str) {
	return (parseInt(str));
}
stringInt("199")

// Create a function that returns true when num1 is equal to num2; otherwise return false.

function isSameNum(num1, num2) {
	if (num1 === num2)
  return true;
 else {
  return false
	}
}
isSameNum(1,1)

//There is a single operator in JavaScript, capable of providing the remainder of a division operation. Two numbers are passed as parameters. The first parameter divided by the second parameter will have a remainder, possibly zero. Return that value.
function remainder(x, y) {
	return x % y
}

// Write a function that takes the base and height of a triangle and return its area.

function triArea(base, height) {
	return base * height * .5
}

// Given two strings, firstName and lastName, return a single string in the format "last, first".

function concatName(firstName, lastName) {
	return lastName + ", " + firstName
}
concatName("Chris","Last" )

// Given two numbers, return true if the sum of both numbers is less than 100. Otherwise return false.

function lessThan100(a, b) {
	if (a + b <= 100) {
		return true
	}	else {
		return false
	}
}
lessThan100(10,2)
 
